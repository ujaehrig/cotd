# Vacation Management System Configuration
# Copy this file to .env and configure your settings

# ==============================================
# FLASK APPLICATION SETTINGS
# ==============================================

# Flask secret key for session management
# IMPORTANT: Change this to a random string in production
SECRET_KEY=your-secret-key-change-this-in-production

# Flask environment (development/production)
FLASK_ENV=development

# Flask debug mode (true/false)
FLASK_DEBUG=true

HOST=127.0.0.1
PORT=5000

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# Email service mode:
# - true: Save emails to files (development mode)
# - false: Send actual emails via SMTP (production mode)
USE_FILE_EMAIL=true

# SMTP Server Configuration (only needed if USE_FILE_EMAIL=false)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Email sender information
FROM_EMAIL=noreply@vacation-manager.local
FROM_NAME=Vacation Manager

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database path (optional, defaults to user.db in script directory)
DB_PATH=user.db

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Password requirements
MIN_PASSWORD_LENGTH=6

# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, defaults to console only)
# LOG_FILE=vacation_manager.log

# ==============================================
# EMAIL PROVIDER EXAMPLES
